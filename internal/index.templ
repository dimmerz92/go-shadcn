package internal

import "github.com/dimmerz92/go-shadcn/pkg/ui"

templ Index() {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="utf8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<link rel="stylesheet" href="/output.css"/>
			@ui.DetectTheme()
			<title>Go shadcn Development</title>
		</head>
		<body>
			@ui.ThemeToggle(nil)
			<br/>
			@ui.Avatar(ui.AvatarProps{Src: "https://github.com/shadcn.png", Alt: "@user", Fallback: "AW"})
			@ui.Avatar(ui.AvatarProps{Src: "https://github.com/shadcn.pn", Alt: "@user", Fallback: "AJW"})
		</body>
	</html>
}
